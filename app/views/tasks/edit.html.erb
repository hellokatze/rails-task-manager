<h1>Edit task</h1>
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.submit %>
  <br>
  <%= f.check_box :completed %>
  <%= f.label :completed %>
<% end %>
<br>
<%= link_to "Cancel", "/tasks" %>
